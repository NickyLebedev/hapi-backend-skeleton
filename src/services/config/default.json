{
  "server": {
    "port": 3000,
    "auth": {
      "jwt": {
        "active": true,
        "jwtSecret": "change me"
      }
    },
    "plugins": [
      "jwt-auth",
      "swagger"
    ]
  },
  "database": {
    "uri": "mongodb://localhost:27017/ads-platform",
    "options": {
      "useMongoClient": true,
      "autoIndex": true,
      "reconnectInterval": 500,
      "poolSize": 10,
      "bufferMaxEntries": 0
    }
  },
  "log": {
    "level": "debug",
    "json": false,
    "showLevel": true,
    "timestamp": true,
    "colorize": true,
    "exitOnError": false,
    "handleExceptions": true,
    "humanReadableUnhandledException": true
  }
}