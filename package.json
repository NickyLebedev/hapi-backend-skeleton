{
  "name": "node-backend-skeleton",
  "version": "0.0.1",
  "title": "Node Backend Skeleton Application",
  "description": "Example of Node.js Backend Application",
  "author": "Andrei Kazakou <a.v.kazakou@gmail.com>",
  "repository": "git@gitlab.com:akazakou/backend.git",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "rm -rf ./build && npm run lint && tsc",
    "lint": "tslint --project tsconfig.json --config tslint.json src/**/*.ts",
    "start": "node build/src/index.js",
    "debug": "concurrently 'tsc -w' 'nodemon --inspect=0.0.0.0:9229 --watch build/src build/src/index.js'",
    "test": "npm run build && npm run coverage",
    "coverage": "nyc mocha -r ts-node/register -r source-map-support/register --recursive test/**/*.ts",
    "codecov": "codecov -f build/coverage/*.json -t $CODECOV_TOKEN",
    "migrate:up": "migrate up --es6 --autosync --dbConnectionUri $database__uri"
  },
  "dependencies": {
    "bcrypt": "latest",
    "boom": "latest",
    "bson": "latest",
    "good": "latest",
    "good-winston": "latest",
    "hapi": "latest",
    "hapi-auth-jwt2": "latest",
    "hapi-swagger": "latest",
    "inert": "latest",
    "joi": "latest",
    "jsonwebtoken": "latest",
    "migrate-mongoose": "latest",
    "mongodb-uri": "latest",
    "mongoose": "latest",
    "nconf": "latest",
    "vision": "latest",
    "winston": "latest"
  },
  "devDependencies": {
    "@types/bcrypt": "latest",
    "@types/boom": "latest",
    "@types/chai": "latest",
    "@types/chai-as-promised": "latest",
    "@types/hapi": "latest",
    "@types/hapi-auth-jwt2": "latest",
    "@types/joi": "latest",
    "@types/jsonwebtoken": "latest",
    "@types/mocha": "latest",
    "@types/mongoose": "latest",
    "@types/nconf": "latest",
    "@types/sinon": "latest",
    "@types/winston": "latest",
    "chai": "latest",
    "chai-as-promised": "latest",
    "concurrently": "latest",
    "mocha": "latest",
    "nodemon": "latest",
    "nyc": "latest",
    "sinon": "latest",
    "source-map-support": "latest",
    "ts-node": "latest",
    "tslint": "latest",
    "tslint-config-standard": "latest",
    "tslint-eslint-rules": "latest",
    "typescript": "latest"
  },
  "nyc": {
    "report-dir": "build/coverage",
    "check-coverage": true,
    "cache": false,
    "all": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "watermarks": {
      "lines": [
        95,
        100
      ],
      "functions": [
        95,
        100
      ],
      "branches": [
        95,
        100
      ],
      "statements": [
        95,
        100
      ]
    },
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/index.ts"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary",
      "json"
    ]
  },
  "engines": {
    "node": ">=8.9.4"
  }
}
