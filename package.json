{
  "name": "node-backend-skeleton",
  "version": "0.0.1",
  "title": "Node Backend Skeleton Application",
  "description": "Example of Node.js Backend Application",
  "author": "Andrei Kazakou <a.v.kazakou@gmail.com>",
  "repository": "git@gitlab.com:akazakou/backend.git",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "start": "npm run build && node build/src/index.js",
    "start:dev": "npm run build && concurrently 'tsc -w' 'npm run watch'",
    "build": "gulp default",
    "watch": "nodemon --inspect=0.0.0.0:9229 --watch build/src build/src/index.js",
    "test": "npm run build && npm run coverage",
    "coverage": "nyc mocha -r ts-node/register -r source-map-support/register --recursive test/**/*.ts",
    "codecov": "codecov -f build/coverage/*.json -t $CODECOV_TOKEN"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "bcrypt": "^1.0.3",
    "bson": "^1.0.4",
    "good": "^7.3.0",
    "good-winston": "^4.0.0",
    "hapi": "^16.6.0",
    "hapi-auth-jwt2": "^7.3.0",
    "hapi-swagger": "^7.9.1",
    "inert": "^4.2.0",
    "joi": "^11.0.3",
    "jsonwebtoken": "^8.1.0",
    "mongodb-uri": "^0.9.7",
    "mongoose": "^4.13.5",
    "nconf": "^0.8.4",
    "vision": "^4.1.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/hapi": "^16.1.9",
    "@types/joi": "^10.4.3",
    "@types/mocha": "^2.2.43",
    "@types/mongoose": "^4.7.28",
    "@types/nconf": "0.0.34",
    "@types/sinon": "^2.3.5",
    "@types/winston": "^2.3.6",
    "chai": "^4.1.2",
    "concurrently": "^3.4.0",
    "gulp": "^3.9.1",
    "gulp-env": "^0.4.0",
    "gulp-istanbul": "^1.1.2",
    "gulp-mocha": "^3.0.1",
    "gulp-rimraf": "^0.2.1",
    "gulp-shell": "^0.5.2",
    "gulp-tslint": "^7.1.0",
    "mocha": "^3.5.3",
    "nodemon": "^1.10.2",
    "nyc": "^11.3.0",
    "sinon": "^3.3.0",
    "source-map-support": "^0.5.0",
    "ts-node": "^4.0.2",
    "tslint": "^4.5.1",
    "typescript": "^2.5.2"
  },
  "nyc": {
    "report-dir": "build/coverage",
    "check-coverage": true,
    "fail": true,
    "cache": false,
    "all": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "watermarks": {
      "lines": [
        95,
        100
      ],
      "functions": [
        95,
        100
      ],
      "branches": [
        95,
        100
      ],
      "statements": [
        95,
        100
      ]
    },
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary",
      "json"
    ]
  },
  "engines": {
    "node": ">=6.5.0"
  }
}
