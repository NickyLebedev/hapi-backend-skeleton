{
  "compilerOptions": {
    "strict": true,
    "rootDirs": [
      "src",
      "test"
    ],
    "outDir": "build",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "inlineSources": true,
    "typeRoots": [
      "src/typings",
      "node_modules/@types"
    ],
    "types": [
      "node",
      "mocha"
    ],
    "lib": [
      "esnext.asynciterable",
      "es2016",
      "dom"
    ]
  },
  "include": [
    "src/**/**.ts",
    "test/**/**.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
